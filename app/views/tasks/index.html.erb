<ul>
  <% @tasks.each do |task| %>
    <li>
    <%= link_to task.title, task_path(task) %>
    <strong><%= link_to "Delete", task_path(task),
                method: :delete,
                data: { confirm: "Are you sure?" } %>
    </strong>
    </li>
  <% end %>
</ul>
<h3><%= link_to "Create a new task", new_task_path %></h3>
